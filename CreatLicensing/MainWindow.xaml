<Window x:Class="CreatLicensing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatLicensing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
		<StackPanel>
			<TextBox  Name="Id" TextWrapping="Wrap" FontSize="10" Background="#FFADF7F3" Height="62" />
			<TextBlock Width="270">
					<StackPanel>
						<CheckBox Name="traler" Content="Đăng kí Bản Trailer(10 ngày)" Width="300" IsChecked="True"/>
						<CheckBox Name="Pro" Content="Đăng kí Pro" Width="300"/>
					</StackPanel>
			</TextBlock>
			<TextBox  Name="license" TextWrapping="WrapWithOverflow" FontSize="10" Background="#FFADF7F3" Height="132"/>
			<TextBlock Width="270">
					<Button  Content="Lấy mã liccense" Height="27" Width="129" Click="Button_Click"/>
			</TextBlock>
		</StackPanel>
    </Grid>
</Window>
